*
  margin 0
  padding 0

body
  -webkit-text-size-adjust: 100%
  max-height: 100%
  background color-background
  color color-font
  font-family font-default
  font-size 14px
  text-shadow 0 0 1px transparent
  margin 0 30px

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  width 100%

#main-col
  margin-right 0
  float none

#wrapper
  margin-right 0
