#header
  text-shadow 0 0 1px #fff
  margin 0px auto
  margin-left 0
  margin-right auto
  max-width 100%

  a
    color ##58fb8
    &:hover
      color color-link
      text-decoration none

  h1
    font-weight bold
    font-size 2.5em
    line-height 1

  h2
    font-weight bold
    font-size 0.9em
    line-height 1
    margin-top 10px

  #main-nav
    font-family font-title
    line-height 2.5em
    float right
    ul
      list-style none
      li
        float left
        margin-left 30px

  h3
    color #7a7a7a
    font-weight lighter
    line-height 1
